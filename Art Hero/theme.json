{
	"name": "Art Hero",
	"author": "Metagawa",
	"target": "System-Wide",
	"version": "v2.6",
	"description": "A theme for seeing your Hero Art unobstructed. Use Obsidian for Colour Control",
	"manifest_version": 5,
	"inject": {
		"shared.css": [
			"SP",
			"MainMenu",
			"QuickAccess"
		]
	},
	"dependencies": {
		"Centered Game Text": {},
		"Game Header Text Stroke": {}
	},
	"patches": {
		"Top Game Header Text": {
			"type": "checkbox",
			"default": "No",
			"values": {
				"Yes": {
					"toptext.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				},
				"No": {}
			},
			"components": []
		},
		"Expanded Hero": {
			"type": "dropdown",
			"default": "Wide Hero",
			"values": {
				"Expanded Hero": {
					"LeakingBG.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				},
				"Wide Hero": {
					"StandardBG.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				},
				"Full Screen Hero": {
					"FullBG.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				}
			},
			"components": []
		},
		"Subtle Gradient": {
			"type": "checkbox",
			"default": "Yes",
			"values": {
				"Yes": {
					"subtlegradient.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				},
				"No": {}
			},
			"components": []
		},
		"16:9 Patch": {
			"type": "checkbox",
			"default": "No",
			"values": {
				"Yes": {
					"widescreen.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				},
				"No": {}
			},
			"components": []
		}
	}
}