{
	"name": "Art Hero",
	"author": "Metagawa",
	"target": "System-Wide",
	"version": "v2.0h-no.1",
	"description": "A theme for seeing your Hero Art unobstructed. Colour control is deprecated, use Obsidian for Colour Control",
	"manifest_version": 5,
	"inject": {},
	"dependencies": {
		"Centered Game Text": {},
		"DellyFooter": {
			"Size": "Smaller"
		},
		"Game Header Text Stroke": {}
	},
	"patches": {
		"Bottom Text": {
			"type": "checkbox",
			"default": "No",
			"values": {
				"Yes": {
					"bottomtext.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				},
				"No": {
					"toptext.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				}
			},
			"components": []
		},
		"Expanded Hero": {
			"type": "dropdown",
			"default": "Wide Hero",
			"values": {
				"Expanded Hero": {
					"LeakingBG.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				},
				"Wide Hero": {
					"StandardBG.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				},
				"Full Screen Hero": {
					"FullBG.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				}
			},
			"components": []
		},
		"Subtle Gradient": {
			"type": "checkbox",
			"default": "No",
			"values": {
				"Yes": {
					"subtlegradient.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				},
				"No": {}
			},
			"components": []
		}
	}
}