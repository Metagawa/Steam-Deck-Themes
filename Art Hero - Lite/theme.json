{
	"name": "Art Hero - Lite",
	"author": "Met",
	"target": "System-Wide",
	"version": "v1.00",
	"description": "By popular demand, the lite version of Art Hero is here!",
	"manifest_version": 5,
	"inject": {},
	"dependencies": {
		"DellyFooter": {
			"Effect": "Transparent",
			"Size": "Smaller"
		},		
		"Centered Game Text": {},    
		"No Home Filter": {
      "Opacity Control": "1"
    },
		"Top Bar Transparency": {
			"Transparency": ".0",
			"Always Add Transparency": "Yes"
		}
	},
	"patches": {
		"Bottom Text": {
			"type": "checkbox",
			"default": "No",
			"values": {
				"Yes": {
					"bottomtext.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				},
				"No": {
					"toptext.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				}
			},
			"components": []
		},
		"Expanded Hero": {
			"type": "checkbox",
			"default": "No",
			"values": {
				"Yes": {
					"LeakingBG.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				},
				"No": {
					"StandardBG.css": [
						"SP",
						"MainMenu",
						"QuickAccess"
					]
				}
			},
			"components": []
		}
	}
}